<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.gbif</groupId>
    <artifactId>motherpom</artifactId>
    <version>16</version>
  </parent>

  <artifactId>gbif-doi</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>GBIF DOI Service</name>
  <description>This project provides DOI services wrapping DataCite and EZID used by the IPT and Portal</description>
  <url>http://github.org/gbif/gbif-doi</url>

  <scm>
    <connection>scm:git:git@github.com:gbif/gbif-doi.git</connection>
    <url>https://github.com/gbif/gbif-doi</url>
    <developerConnection>scm:git:git@github.com:gbif/gbif-doi.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <repositories>
    <repository>
      <id>central</id>
      <url>http://repo1.maven.org/maven2/</url>
    </repository>
    <repository>
      <id>gbif-all</id>
      <url>http://repository.gbif.org/content/groups/gbif</url>
    </repository>
  </repositories>

  <properties>
    <jdkLevel>1.6</jdkLevel>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <!-- plugins -->
    <jaxb2-rich-contract-plugin.version>1.2.3</jaxb2-rich-contract-plugin.version>
    <maven-jaxb2-plugin.version>0.9.0</maven-jaxb2-plugin.version>
    <jaxb2_commons.version>0.6.3</jaxb2_commons.version>
    <xjc-guava-plugin.version>0.3</xjc-guava-plugin.version>

    <!-- libs -->
    <findbugs-jsr305.version>3.0.0</findbugs-jsr305.version>
    <freemarker.version>2.3.21</freemarker.version>
    <gbif-api.version>0.17-SNAPSHOT</gbif-api.version>
    <gbif-common.version>0.16</gbif-common.version>
    <gbif-httputils.version>0.5</gbif-httputils.version>
    <guava.version>17.0</guava.version>
    <httpclient.version>4.2.3</httpclient.version>
    <httpcore.version>4.2.3</httpcore.version>
    <jackson.version>1.9.13</jackson.version>
    <jackson2.version>2.4.2</jackson2.version>
    <junit.version>4.11</junit.version>
    <logback.version>1.1.2</logback.version>
    <mockito.version>1.10.8</mockito.version>
    <slf4j-api.version>1.7.7</slf4j-api.version>
    <validation-api.version>1.1.0.Final</validation-api.version>
    <metadata.schema.url>http://schema.datacite.org/meta/kernel-3/metadata.xsd</metadata.schema.url>
    <jaxb-xjc.distdir>${basedir}/src/main/jaxb-xjc</jaxb-xjc.distdir>
    <internal.repo.path>file://${basedir}/../datacite-maven-repos/</internal.repo.path>
  </properties>


  <build>
      <!--
        Generates source from the XSD using plugins to provide immutable
     classes, fluent builders, annotations for selected @XmlRootElement and guava
     based equals, toString and hashcode.
     See also:
     - https://github.com/mklemm/jaxb2-rich-contract-plugin (immutable and builders)
     - https://github.com/danielwegener/xjc-guava-plugin (guava helpers)
   -->

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>clean-xjc-output</id>
            <phase>clean</phase>
            <configuration>
              <target>
                <delete dir="${jaxb-xjc.distdir}" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>xjc</id>
            <phase>generate-sources</phase>
            <configuration>
              <target>
                <taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask" classpathref="maven.plugin.classpath" />
                <mkdir dir="${jaxb-xjc.distdir}" />
                <xjc schema="${metadata.schema.url}" destdir="${jaxb-xjc.distdir}" package="org.gbif.datacite.kernel3.metadata">
                  <classpath refid="maven.compile.classpath" />
                  <depends dir="${basedir}/src/main/resources" includes="metadata.xsd" />
                  <produces dir="${jaxb-xjc.distdir}" includes="**/*" />
                </xjc>
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-xjc</artifactId>
            <version>2.1.10</version>
          </dependency>
        </dependencies>
      </plugin>
      <!-- Inform IDEs that the generated sources are on the CP -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${jaxb-xjc.distdir}</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- GBIF -->
    <dependency>
      <groupId>org.gbif</groupId>
      <artifactId>gbif-api</artifactId>
      <version>${gbif-api.version}</version>
    </dependency>
    <dependency>
      <groupId>org.gbif</groupId>
      <artifactId>gbif-httputils</artifactId>
      <version>${gbif-httputils.version}</version>
    </dependency>
    <dependency>
      <groupId>org.gbif</groupId>
      <artifactId>gbif-common</artifactId>
      <version>${gbif-common.version}</version>
    </dependency>

    <!-- OTHER -->
    <dependency>
      <groupId>javax.validation</groupId>
      <artifactId>validation-api</artifactId>
      <version>${validation-api.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
      <version>${httpclient.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpcore</artifactId>
      <version>${httpcore.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>${findbugs-jsr305.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j-api.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${guava.version}</version>
    </dependency>

    <!-- TEST -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <version>${mockito.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${logback.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
